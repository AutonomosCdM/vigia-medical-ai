# VIGIA Medical AI - Testing Environment Configuration
# ===================================================

# Environment settings
TESTING=true
VIGIA_ENV=testing
environment=testing
LOG_LEVEL=DEBUG

# Database and cache
REDIS_URL=redis://localhost:6379/1
DATABASE_URL=postgresql://test:test@localhost/vigia_test

# Medical AI configuration
OLLAMA_URL=http://localhost:11434
MEDGEMMA_MODEL=medgemma:27b
MEDICAL_AI_PROVIDER=medgemma_local

# PHI Tokenization (testing mode)
PHI_TOKENIZATION_URL=http://localhost:8080
HIPAA_COMPLIANCE_MODE=testing
ENABLE_MEDICAL_AUDIT=true

# Hospital/medical configuration
HOSPITAL_ID=VIGIA_TEST_HOSPITAL
STAFF_ID=TEST_PHYSICIAN_001
NPUAP_GUIDELINES_VERSION=2019

# Communication (disabled for testing)
TWILIO_ACCOUNT_SID=test_account_sid
TWILIO_AUTH_TOKEN=test_auth_token
SLACK_BOT_TOKEN=xoxb-test-token
WHATSAPP_NUMBER=+1234567890

# Security settings
ENCRYPTION_KEY=test_encryption_key_32_characters
JWT_SECRET=test_jwt_secret_key_for_testing
AUDIT_RETENTION_DAYS=30

# Performance and monitoring
ENABLE_PERFORMANCE_TRACKING=true
ENABLE_METRICS=false
PROMETHEUS_PORT=9090

# File storage
UPLOAD_FOLDER=/tmp/vigia_test_uploads
MAX_FILE_SIZE=10485760

# External services (testing)
GOOGLE_CLOUD_PROJECT=vigia-test
GOOGLE_APPLICATION_CREDENTIALS=/dev/null
RENDER_EXTERNAL_URL=http://localhost:8000

# Medical compliance
MEDICAL_DEVICE_CLASS=II
ISO_13485_COMPLIANCE=true
FDA_510K_STATUS=pending